ENERGY_STATUS_LIST = [
    "Stabil âš¡", 
    "Tidak Stabil âŒ", 
    "Sangat Kuat ğŸ’¥", 
    "Melemah ğŸŒ€", 
    "Overload ğŸ”¥", 
