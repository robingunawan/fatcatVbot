import requests
import random
from PyroUbot import *

__MODULE__ = "Ï™á´œá´á´›á´‡s á´€É´Éªá´á´‡"
__HELP__ = """
<b>â¦ª Ê™á´€É´á´›á´œá´€É´ á´œÉ´á´›á´œá´‹ Ï™á´œá´á´›á´‡s á´€É´Éªá´á´‡ â¦«</b>
<blockquote>â† perintah :
áš— <code>{0}qanime</code></blockquote>
