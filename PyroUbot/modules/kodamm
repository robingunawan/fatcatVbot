@PY.UBOT("ckodam")
async def _(client, message):
    if message.reply_to_message:
        user = message.reply_to_message.from_user
    elif len(message.command) > 1:
        user = await client.get_users(message.command[1])
    else:
        user = message.from_user
    
    if user:
        username = f"@{user.username}" if user.username else user.first_name
        energy_percent = random.randint(10, 100)
        khodam = random.choice(KHODAM_LIST)
        energy_status = random.choice(ENERGY_STATUS_LIST)

        response = f"""
<blockquote>**__âœ¨ **Deteksi Khodam Aktif** âœ¨

ğŸ‘¤ **Subjek**: {username}
ğŸ” **Analisis Energi**: [{energy_percent}%] {"â–ˆ" * (energy_percent // 10)}
ğŸ”® **Khodam Terdeteksi**: {khodam}

ğŸŒ€ **Energi Mistis**: {energy_status}__**</blockquote>
"""
        await message.reply_text(response)
    else:
        await message.reply_text("â›” **Gagal mendeteksi pengguna...**")
